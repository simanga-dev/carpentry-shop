<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarpentryShop</title>
    <link rel="stylesheet" href="~/CarpentryShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css">
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.theme.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/semantic-ui/semantic.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-dark navbar-dark mb-3">
            <div class="container justify-content-between">
                <!-- <div class="logo"> -->
                <!-- <img class="logo-img" src="~/logo.png"> -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">Carpentry Shop</a>
                <!-- </div> -->

                <div style="display:flex">
                    <a class="nav-link text-light" target="_blank" href="https://github.com/simanga-dev/carpentry-shop"> <i class="github icon"></i> Github</a>
                    <a class="nav-link text-light" asp-area="" asp-page="/Admin/Index">Admin</a>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>

    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CarpentryShop - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/semantic-ui/semantic.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
